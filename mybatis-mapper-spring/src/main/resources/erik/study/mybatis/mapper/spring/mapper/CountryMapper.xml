<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="erik.study.mybatis.mapper.spring.mapper.CountryMapper">

    <select id="selectAll" resultType="erik.study.mybatis.mapper.common.model.Country">
        select id, country_name, country_code
        from country
    </select>

    <select id="selectOneWithoutParam" resultType="erik.study.mybatis.mapper.common.model.Country">
        select *
        from country
        where id = 1
    </select>

    <select id="selectOneById" resultType="erik.study.mybatis.mapper.common.model.Country">
        select *
        from country
        where id = #{0}
    </select>

    <select id="selectOneByIdAndCodeWithList" resultType="erik.study.mybatis.mapper.common.model.Country">
        select *
        from country
        where id = #{0}
        and country_code = #{1}
    </select>

    <select id="selectOneByIdAndCodeWithMap" resultType="erik.study.mybatis.mapper.common.model.Country">
        select *
        from country
        where id = #{id}
        and country_code = #{countryCode}
    </select>

    <select id="selectOneByIdAndCode" resultType="erik.study.mybatis.mapper.common.model.Country">
        select *
        from country
        where id = #{id}
        and country_code = #{countryCode}
    </select>







</mapper>
